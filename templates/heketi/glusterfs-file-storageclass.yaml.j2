apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: {{ cluster_name | default('gluster') }}-file
provisioner: kubernetes.io/glusterfs
parameters:
  resturl: http://{{ heketi_route.stdout }}
  restuser: admin
  volumetype: "replicate:3"
  secretNamespace: "default"
  secretName: heketi-secret-file
